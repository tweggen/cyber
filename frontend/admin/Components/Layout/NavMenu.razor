@using Microsoft.AspNetCore.Components.Authorization

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Notebook Admin</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="notebooks">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Notebooks
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="profile">
                        <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> Profile
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin">
                        <span class="bi bi-gear-nav-menu" aria-hidden="true"></span> Admin Panel
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <form method="post" action="/auth/logout">
                        <button type="submit" class="nav-link btn btn-link">
                            Logout
                        </button>
                    </form>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="auth/login">
                        Login
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="auth/register">
                        Register
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>

    <div class="theme-switcher" onclick="event.stopPropagation()">
        <label for="theme-select">Theme</label>
        <select id="theme-select" onchange="setTheme(this.value)">
            <option value="crt">Amber CRT</option>
            <option value="twm">X11 TWM</option>
        </select>
    </div>
</div>
