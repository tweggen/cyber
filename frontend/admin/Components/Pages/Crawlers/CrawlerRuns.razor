@page "/admin/crawlers/{NotebookId:guid}/runs"
@layout AdminLayout
@using Microsoft.AspNetCore.Components.Authorization
@attribute [Authorize]
@using NotebookAdmin.Models
@using NotebookAdmin.Services
@inject NotebookApiClient ApiClient
@inject CurrentUserService CurrentUser
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Crawler Run History</PageTitle>

<div class="mb-3">
    <a href="/admin/crawlers" class="btn btn-outline-secondary btn-sm">
        <span class="bi bi-arrow-left"></span> Back to Configuration
    </a>
    <button class="btn btn-outline-primary btn-sm ms-2" @onclick="RefreshRuns" disabled="@isLoading">
        <span class="bi bi-arrow-clockwise"></span> Refresh
    </button>
</div>

<h3>Crawler Run History</h3>

@if (notebookName != null)
{
    <p class="text-muted">Notebook: <strong>@notebookName</strong></p>
}

<div class="card">
    <div class="card-body">
        @if (errorMessage != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @errorMessage
                <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
            </div>
        }

        @if (isLoading)
        {
            <p>Loading run history...</p>
        }
        else if (runs == null || runs.Count == 0)
        {
            <div class="alert alert-info">
                No crawler runs have been executed yet. <a href="/admin/crawlers">Configure and run a crawler</a>.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 20%;">Started At</th>
                            <th style="width: 15%;">Duration</th>
                            <th style="width: 12%;">Status</th>
                            <th style="width: 12%;">Entries Created</th>
                            <th style="width: 41%;">Error Message</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var run in runs)
                        {
                            <tr>
                                <td>
                                    <small>@run.StartedAt.ToString("yyyy-MM-dd HH:mm:ss")</small>
                                </td>
                                <td>
                                    @if (run.Duration.HasValue)
                                    {
                                        <code>@run.Duration.Value.ToString("F2")s</code>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(run.Status)">
                                        @run.Status
                                    </span>
                                </td>
                                <td>
                                    <code>@run.EntriesCreated</code>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(run.ErrorMessage))
                                    {
                                        <small class="text-danger">@run.ErrorMessage</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="mt-3 text-muted">
                <small>Showing @runs.Count total run@(runs.Count != 1 ? "s" : "")</small>
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public Guid NotebookId { get; set; }

    private string? notebookName;
    private List<CrawlerRunHistory>? runs;
    private string? errorMessage;
    private bool isLoading = false;
    private Task<AuthenticationState>? AuthState { get; set; }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var state = AuthState != null ? await AuthState : null;
            var authorIdHex = await CurrentUser.GetAuthorIdHexAsync(state?.User);

            if (authorIdHex == null)
            {
                Navigation.NavigateTo("/auth/login");
                return;
            }

            // Load notebook name for display
            var notebooks = await ApiClient.ListNotebooksAsync(authorIdHex);
            var notebook = notebooks?.Notebooks?.FirstOrDefault(n => n.Id == NotebookId);
            notebookName = notebook?.Name ?? "Unknown Notebook";

            await LoadRuns(authorIdHex);
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to initialize: {ex.Message}";
        }
    }

    private async Task LoadRuns(string authorIdHex)
    {
        try
        {
            errorMessage = null;
            isLoading = true;

            runs = await ApiClient.GetCrawlerRunsAsync(authorIdHex, NotebookId);

            // Sort by started_at descending (most recent first)
            if (runs != null)
            {
                runs = runs.OrderByDescending(r => r.StartedAt).ToList();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load run history: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RefreshRuns()
    {
        try
        {
            var state = AuthState != null ? await AuthState : null;
            var authorIdHex = await CurrentUser.GetAuthorIdHexAsync(state?.User);

            if (authorIdHex != null)
            {
                await LoadRuns(authorIdHex);
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to refresh: {ex.Message}";
        }
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "success" => "bg-success",
            "failed" => "bg-danger",
            "running" => "bg-primary",
            "partial" => "bg-warning text-dark",
            _ => "bg-secondary"
        };
    }
}
