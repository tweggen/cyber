@page "/notebooks/{NotebookId:guid}"
@using Microsoft.AspNetCore.Components.Authorization
@attribute [Authorize]
@using NotebookAdmin.Models
@using NotebookAdmin.Services
@inject NotebookApiClient ApiClient
@inject CurrentUserService CurrentUser
@inject NavigationManager Navigation
@inject TokenService TokenService
@inject IConfiguration Configuration
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@rendermode InteractiveServer

<PageTitle>@(notebookName ?? "Notebook")</PageTitle>

<h3>@(notebookName ?? "Notebook Details")</h3>

@if (errorMessage != null)
{
    <div class="alert alert-warning">@errorMessage</div>
}

@if (browseResult == null && errorMessage == null)
{
    <p>Loading...</p>
}
else if (browseResult != null)
{
    <div class="row mb-3">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Total Entries</h6>
                    <p class="card-text display-6">@browseResult.TotalEntries</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Notebook Entropy</h6>
                    <p class="card-text display-6">@browseResult.NotebookEntropy.ToString("F2")</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Clusters</h6>
                    <p class="card-text display-6">@browseResult.Catalog.Count</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-3 d-flex flex-wrap gap-2 align-items-center">
        <a href="/notebooks/@NotebookId/entries/new" class="btn btn-primary">New Entry</a>

        @if (isOwner)
        {
            <button class="btn btn-outline-secondary"
                    @onclick="StartRename"
                    disabled="@(isRenamingInline)">Rename</button>
            <button class="btn btn-outline-info"
                    @onclick="ShowConnect">Connect</button>
            <button class="btn btn-outline-warning"
                    @onclick="ShowToken">Token</button>

            <button class="btn btn-outline-secondary"
                    @onclick="RetryFailedJobs"
                    disabled="@isRetryingJobs">@(isRetryingJobs ? "Retrying..." : "Retry Failed Jobs")</button>

            @if (showDeleteConfirm)
            {
                <button class="btn btn-danger" @onclick="DeleteNotebook">Yes, Delete</button>
                <button class="btn btn-outline-secondary" @onclick="() => showDeleteConfirm = false">Cancel</button>
            }
            else
            {
                <button class="btn btn-outline-danger" @onclick="ConfirmDelete">Delete</button>
            }
        }
    </div>

    @if (retryMessage != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @retryMessage
            <button type="button" class="btn-close" @onclick="() => retryMessage = null"></button>
        </div>
    }

    @if (isRenamingInline)
    {
        <div class="card mb-3">
            <div class="card-body">
                <div class="d-flex gap-2">
                    <input type="text" class="form-control" placeholder="New name"
                           @bind="renameValue" @bind:event="oninput" @onkeydown="HandleRenameKeyDown" />
                    <button class="btn btn-primary" @onclick="ConfirmRename"
                            disabled="@(isRenaming || string.IsNullOrWhiteSpace(renameValue))">Save</button>
                    <button class="btn btn-outline-secondary" @onclick="CancelRename"
                            disabled="@isRenaming">Cancel</button>
                </div>
                @if (renameError != null)
                {
                    <div class="text-danger mt-2">@renameError</div>
                }
            </div>
        </div>
    }

    @if (viewConnectNotebookId != null)
    {
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center gap-2">
                    <span>Connect <strong>@notebookName</strong> to</span>
                    <select class="form-select form-select-sm" style="width: auto;"
                            @onchange="OnTargetChanged" value="@viewConnectTarget">
                        @foreach (var kv in TargetLabels)
                        {
                            <option value="@kv.Key">@kv.Value</option>
                        }
                    </select>
                </div>
                <button class="btn btn-sm btn-outline-secondary" @onclick="CloseConnect">Close</button>
            </div>
            <div class="card-body">
                <p class="text-muted small">Run one of these commands to register the notebook MCP server:</p>

                <div class="mb-3">
                    <label class="form-label small fw-bold mb-1">Bash (Mac / Linux / WSL)</label>
                    <div class="input-group input-group-sm">
                        <input type="text" class="form-control font-monospace" value="@viewBashCommand" readonly />
                        <button class="btn btn-outline-secondary"
                                onclick="clipboardCopyFromSibling(this)"
                                title="Copy to clipboard">Copy</button>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label small fw-bold mb-1">Git Bash (Windows)</label>
                    <div class="input-group input-group-sm">
                        <input type="text" class="form-control font-monospace" value="@viewGitBashCommand" readonly />
                        <button class="btn btn-outline-secondary"
                                onclick="clipboardCopyFromSibling(this)"
                                title="Copy to clipboard">Copy</button>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label small fw-bold mb-1">PowerShell (Windows)</label>
                    <div class="input-group input-group-sm">
                        <input type="text" class="form-control font-monospace" value="@viewPsCommand" readonly />
                        <button class="btn btn-outline-secondary"
                                onclick="clipboardCopyFromSibling(this)"
                                title="Copy to clipboard">Copy</button>
                    </div>
                </div>

                <p class="text-muted small mb-0">
                    Token is short-lived. Click <strong>Connect</strong> again to generate a fresh command.
                </p>
            </div>
        </div>
    }

    @if (viewTokenValue != null)
    {
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Token for <strong>@notebookName</strong></span>
                <button class="btn btn-sm btn-outline-secondary" @onclick="CloseToken">Close</button>
            </div>
            <div class="card-body">
                <label class="text-muted small mb-1">Notebook ID</label>
                <div class="input-group input-group-sm mb-3">
                    <input type="text" class="form-control font-monospace" value="@NotebookId" readonly />
                    <button class="btn btn-outline-secondary"
                            onclick="clipboardCopyFromSibling(this)"
                            title="Copy to clipboard">Copy</button>
                </div>

                <label class="text-muted small mb-1">JWT Token</label>
                <div class="input-group input-group-sm">
                    <input type="text" class="form-control font-monospace" value="@viewTokenValue" readonly />
                    <button class="btn btn-outline-secondary"
                            onclick="clipboardCopyFromSibling(this)"
                            title="Copy to clipboard">Copy</button>
                </div>
                <p class="text-muted small mt-2 mb-0">
                    Token is short-lived. Click <strong>Token</strong> again to generate a fresh one.
                </p>
            </div>
        </div>
    }

    @* ================================================================== *@
    @* Entries: path browser + search + paginated table                    *@
    @* ================================================================== *@

    <h4>Entries</h4>

    @* Path breadcrumb *@
    <nav aria-label="Topic path" class="mb-2">
        <ol class="breadcrumb mb-0" style="font-size: 0.9rem;">
            <li class="breadcrumb-item @(pathFilter == "" ? "active" : "")">
                @if (pathFilter == "")
                {
                    <span>/</span>
                }
                else
                {
                    <a href="#" @onclick="() => NavigatePath(string.Empty)" @onclick:preventDefault>/</a>
                }
            </li>
            @{ var segments = PathSegments; }
            @for (int i = 0; i < segments.Count; i++)
            {
                var segPath = string.Join("/", segments.Take(i + 1)) + "/";
                var isLast = i == segments.Count - 1;
                <li class="breadcrumb-item @(isLast ? "active" : "")">
                    @if (isLast)
                    {
                        <span>@segments[i]</span>
                    }
                    else
                    {
                        var p = segPath;
                        <a href="#" @onclick="() => NavigatePath(p)" @onclick:preventDefault>@segments[i]</a>
                    }
                </li>
            }
        </ol>
    </nav>

    @* Virtual directories at current path *@
    @if (virtualDirectories.Count > 0)
    {
        <div class="mb-2 d-flex flex-wrap gap-1">
            @foreach (var dir in virtualDirectories)
            {
                var target = pathFilter + dir + "/";
                <button class="btn btn-sm btn-outline-primary" @onclick="() => NavigatePath(target)">
                    @dir/ <span class="badge bg-secondary ms-1">@DirectoryEntryCount(target)</span>
                </button>
            }
        </div>
    }

    <div class="row g-2 mb-3 align-items-end">
        <div class="col-auto" style="min-width: 280px;">
            <input type="text" class="form-control form-control-sm" placeholder="Search topic or content..."
                @bind="searchQuery" @bind:event="oninput" @onkeyup="OnSearchChanged" />
        </div>
        <div class="col-auto">
            <select class="form-select form-select-sm" @bind="sortField" @bind:after="OnSortChanged">
                <option value="sequence">Newest first</option>
                <option value="sequence_asc">Oldest first</option>
                <option value="topic">Topic A-Z</option>
                <option value="cost">Cost (high to low)</option>
            </select>
        </div>
        @if (!string.IsNullOrWhiteSpace(searchQuery) || pathFilter != "")
        {
            <div class="col-auto">
                <span class="text-muted small">@filteredEntries.Count result(s)</span>
            </div>
        }
    </div>

    @if (allEntries == null || allEntries.Count == 0)
    {
        <p class="text-muted">No entries in this notebook yet.</p>
    }
    else
    {
        <table class="table table-sm table-striped">
            <thead>
                <tr>
                    <th style="width: 60px;">Seq</th>
                    <th style="width: 80px;">Op</th>
                    <th>Topic</th>
                    <th style="width: 90px;">Cost</th>
                    <th style="width: 160px;">Created</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entry in PagedEntries)
                {
                    <tr>
                        <td class="text-muted">@entry.CausalPosition.Sequence</td>
                        <td>
                            <span class="badge @(entry.Operation == "write" ? "bg-success" : "bg-info")">@entry.Operation</span>
                        </td>
                        <td>
                            <a href="/notebooks/@NotebookId/entries/@entry.EntryId">@(entry.Topic ?? "-")</a>
                        </td>
                        <td>@entry.IntegrationCost.CatalogShift.ToString("F3")</td>
                        <td class="text-muted small">@entry.Created.ToString("yyyy-MM-dd HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>

        @* Pagination controls *@
        @if (TotalPages > 1)
        {
            <nav>
                <ul class="pagination pagination-sm justify-content-center">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <button class="page-link" @onclick="() => GoToPage(currentPage - 1)">&laquo;</button>
                    </li>
                    @foreach (var p in VisiblePageNumbers)
                    {
                        <li class="page-item @(p == currentPage ? "active" : "")">
                            <button class="page-link" @onclick="() => GoToPage(p)">@p</button>
                        </li>
                    }
                    <li class="page-item @(currentPage == TotalPages ? "disabled" : "")">
                        <button class="page-link" @onclick="() => GoToPage(currentPage + 1)">&raquo;</button>
                    </li>
                </ul>
            </nav>
        }
    }

    @* ================================================================== *@
    @* Catalog                                                             *@
    @* ================================================================== *@

    <h4 class="mt-4">Catalog</h4>

    @if (browseResult.Catalog.Count == 0)
    {
        <p class="text-muted">No clusters yet.</p>
    }

    @foreach (var cluster in browseResult.Catalog)
    {
        <div class="card mb-2">
            <div class="card-body">
                <h6 class="card-title">@cluster.Topic</h6>
                <p class="card-text">@cluster.Summary</p>
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                        @cluster.EntryCount entries | Cost: @cluster.CumulativeCost.ToString("F2") | Stability: @cluster.Stability
                    </small>
                    @if (cluster.RepresentativeEntryIds.Count > 0)
                    {
                        <div>
                            @foreach (var eid in cluster.RepresentativeEntryIds.Take(3))
                            {
                                <a href="/notebooks/@NotebookId/entries/@eid"
                                   class="btn btn-sm btn-outline-secondary me-1"
                                   title="@eid">@eid.ToString()[..8]</a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    @* ================================================================== *@
    @* Sharing (owner only)                                                *@
    @* ================================================================== *@

    @if (isOwner)
    {
        <hr />
        <h4>Sharing</h4>

        @if (participants != null)
        {
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Author ID</th>
                        <th>Read</th>
                        <th>Write</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in participants)
                    {
                        <tr>
                            <td><code>@(p.AuthorId[..16])...</code></td>
                            <td>@(p.Permissions.Read ? "Yes" : "No")</td>
                            <td>@(p.Permissions.Write ? "Yes" : "No")</td>
                            <td>
                                @if (p.AuthorId != authorIdHex)
                                {
                                    <button class="btn btn-sm btn-outline-danger"
                                        @onclick="() => RevokeAccess(p.AuthorId)">Revoke</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        <div class="row g-2 mt-2">
            <div class="col-auto">
                <input type="text" class="form-control form-control-sm" placeholder="Author ID (64 hex chars)"
                    @bind="shareAuthorId" />
            </div>
            <div class="col-auto">
                <select class="form-select form-select-sm" @bind="shareWrite">
                    <option value="false">Read only</option>
                    <option value="true">Read + Write</option>
                </select>
            </div>
            <div class="col-auto">
                <button class="btn btn-sm btn-primary" @onclick="ShareNotebook">Share</button>
            </div>
        </div>
        @if (shareError != null)
        {
            <div class="alert alert-danger mt-2">@shareError</div>
        }
    }
}

@code {
    [Parameter]
    public Guid NotebookId { get; set; }

    [CascadingParameter]
    private Task<AuthenticationState>? AuthState { get; set; }

    private BrowseResponse? browseResult;
    private List<ChangeEntry>? allEntries;
    private List<ChangeEntry> filteredEntries = [];
    private List<ParticipantDto>? participants;
    private string? errorMessage;
    private string? authorIdHex;
    private string? notebookName;
    private bool isOwner;
    private bool showDeleteConfirm;
    private string shareAuthorId = string.Empty;

    // Retry failed jobs state
    private bool isRetryingJobs;
    private string? retryMessage;

    // Rename state
    private bool isRenamingInline;
    private string? renameValue;
    private bool isRenaming;
    private string? renameError;

    // Connect state
    private Guid? viewConnectNotebookId;
    private string? viewConnectToken;
    private string viewConnectTarget = "claude";
    private string? viewBashCommand;
    private string? viewGitBashCommand;
    private string? viewPsCommand;

    // Token state
    private string? viewTokenValue;

    private static readonly Dictionary<string, string> TargetLabels = new()
    {
        ["claude"] = "Claude Code",
        ["cursor"] = "Cursor",
    };

    private string McpType => Configuration["NotebookApi:McpType"] ?? "notebook";
    private string shareWrite = "false";
    private string? shareError;

    // Path browser, search & pagination state
    private string pathFilter = "";
    private List<string> virtualDirectories = [];
    private string searchQuery = string.Empty;
    private string sortField = "sequence";
    private int currentPage = 1;
    private const int PageSize = 25;

    private List<string> PathSegments =>
        pathFilter == "" ? [] : pathFilter.TrimEnd('/').Split('/').ToList();

    private int TotalPages => filteredEntries.Count == 0 ? 1 : (int)Math.Ceiling((double)filteredEntries.Count / PageSize);

    private IEnumerable<ChangeEntry> PagedEntries =>
        filteredEntries
            .Skip((currentPage - 1) * PageSize)
            .Take(PageSize);

    private IEnumerable<int> VisiblePageNumbers
    {
        get
        {
            // Show at most 7 page numbers centered around current page
            int total = TotalPages;
            int start = Math.Max(1, currentPage - 3);
            int end = Math.Min(total, start + 6);
            start = Math.Max(1, end - 6);
            return Enumerable.Range(start, end - start + 1);
        }
    }

    protected override async Task OnInitializedAsync()
    {
        var state = AuthState != null ? await AuthState : null;
        authorIdHex = await CurrentUser.GetAuthorIdHexAsync(state?.User);
        if (authorIdHex == null)
        {
            Navigation.NavigateTo("/auth/login");
            return;
        }

        try
        {
            browseResult = await ApiClient.BrowseAsync(authorIdHex, NotebookId);

            var observeResult = await ApiClient.ObserveAsync(authorIdHex, NotebookId);
            allEntries = observeResult?.Changes ?? [];

            ApplyFilterAndSort();

            var notebooksResp = await ApiClient.ListNotebooksAsync(authorIdHex);
            var myNotebook = notebooksResp?.Notebooks.FirstOrDefault(n => n.Id == NotebookId);
            isOwner = myNotebook?.IsOwner ?? false;
            notebookName = myNotebook?.Name;

            if (isOwner)
            {
                var participantsResp = await ApiClient.ListParticipantsAsync(authorIdHex, NotebookId);
                participants = participantsResp?.Participants ?? [];
            }
        }
        catch (HttpRequestException ex)
        {
            errorMessage = $"Could not connect to notebook API: {ex.Message}";
        }
    }

    private void ApplyFilterAndSort()
    {
        if (allEntries == null)
        {
            filteredEntries = [];
            virtualDirectories = [];
            return;
        }

        // Compute virtual directories from all entries (ignoring search query)
        ComputeVirtualDirectories();

        IEnumerable<ChangeEntry> result = allEntries;

        // Apply path filter: show only direct children of the current path
        if (pathFilter == "")
        {
            // Root: entries whose topic has no '/' (direct children)
            result = result.Where(e => e.Topic != null && !e.Topic.Contains('/'));
        }
        else
        {
            // Show entries whose topic starts with pathFilter and has no further '/' after it
            result = result.Where(e =>
            {
                if (e.Topic == null || !e.Topic.StartsWith(pathFilter))
                    return false;
                var remainder = e.Topic[pathFilter.Length..];
                return !remainder.Contains('/');
            });
        }

        // Apply search filter (within path-filtered results)
        if (!string.IsNullOrWhiteSpace(searchQuery))
        {
            var q = searchQuery.Trim().ToLowerInvariant();
            result = result.Where(e =>
                (e.Topic != null && e.Topic.ToLowerInvariant().Contains(q)) ||
                e.EntryId.ToString().StartsWith(q, StringComparison.OrdinalIgnoreCase));
        }

        // Apply sort
        result = sortField switch
        {
            "sequence_asc" => result.OrderBy(e => e.CausalPosition.Sequence),
            "topic" => result.OrderBy(e => e.Topic ?? "").ThenByDescending(e => e.CausalPosition.Sequence),
            "cost" => result.OrderByDescending(e => e.IntegrationCost.CatalogShift),
            _ => result.OrderByDescending(e => e.CausalPosition.Sequence), // "sequence" = newest first
        };

        filteredEntries = result.ToList();

        // Reset to page 1 when filter/sort changes
        if (currentPage > TotalPages)
            currentPage = 1;
    }

    private void ComputeVirtualDirectories()
    {
        if (allEntries == null)
        {
            virtualDirectories = [];
            return;
        }

        var dirs = new HashSet<string>();
        foreach (var entry in allEntries)
        {
            if (entry.Topic == null) continue;

            // Only consider topics that start with the current path
            if (pathFilter != "" && !entry.Topic.StartsWith(pathFilter))
                continue;

            var remainder = pathFilter == "" ? entry.Topic : entry.Topic[pathFilter.Length..];

            // If remainder contains '/', the first segment is a virtual directory
            var slashIdx = remainder.IndexOf('/');
            if (slashIdx > 0)
            {
                dirs.Add(remainder[..slashIdx]);
            }
        }

        virtualDirectories = dirs.OrderBy(d => d).ToList();
    }

    private int DirectoryEntryCount(string dirPath)
    {
        if (allEntries == null) return 0;
        return allEntries.Count(e => e.Topic != null && e.Topic.StartsWith(dirPath));
    }

    private void NavigatePath(string path)
    {
        pathFilter = path;
        currentPage = 1;
        ApplyFilterAndSort();
    }

    private void OnSearchChanged()
    {
        currentPage = 1;
        ApplyFilterAndSort();
    }

    private void OnSortChanged()
    {
        currentPage = 1;
        ApplyFilterAndSort();
    }

    private void GoToPage(int page)
    {
        if (page >= 1 && page <= TotalPages)
            currentPage = page;
    }

    // ===== Rename =====

    private void StartRename()
    {
        isRenamingInline = true;
        renameValue = notebookName;
        renameError = null;
    }

    private void CancelRename()
    {
        isRenamingInline = false;
        renameValue = null;
        renameError = null;
    }

    private async Task HandleRenameKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
            await ConfirmRename();
        else if (e.Key == "Escape")
            CancelRename();
    }

    private async Task ConfirmRename()
    {
        if (string.IsNullOrWhiteSpace(renameValue) || authorIdHex == null)
            return;

        isRenaming = true;
        renameError = null;

        try
        {
            await ApiClient.RenameNotebookAsync(authorIdHex, NotebookId, renameValue.Trim());
            notebookName = renameValue.Trim();
            isRenamingInline = false;
            renameValue = null;
        }
        catch (HttpRequestException ex)
        {
            renameError = $"Failed to rename: {ex.Message}";
        }
        finally
        {
            isRenaming = false;
        }
    }

    // ===== Connect =====

    private void ShowConnect()
    {
        if (authorIdHex == null) return;

        CloseToken();
        viewConnectNotebookId = NotebookId;
        viewConnectToken = TokenService.GenerateToken(authorIdHex);
        viewConnectTarget = "claude";
        RegenerateConnectCommands();
    }

    private void OnTargetChanged(ChangeEventArgs e)
    {
        viewConnectTarget = e.Value?.ToString() ?? "claude";
        RegenerateConnectCommands();
    }

    private void RegenerateConnectCommands()
    {
        if (viewConnectNotebookId == null || viewConnectToken == null) return;

        var baseUrl = Navigation.BaseUri.TrimEnd('/');
        var apiUrl = Configuration["NotebookApi:PublicUrl"] ?? baseUrl;
        var id = viewConnectNotebookId.Value;
        var mcp = McpType;
        var targetSuffix = viewConnectTarget != "claude" ? $" --target {viewConnectTarget}" : "";
        var mcpSuffix = mcp != "notebook" ? $" --mcp {mcp}" : "";
        var psTargetSuffix = viewConnectTarget != "claude" ? $" -Target '{viewConnectTarget}'" : "";
        var psMcpSuffix = mcp != "notebook" ? $" -Mcp '{mcp}'" : "";

        viewBashCommand = $"curl -fsSL {baseUrl}/scripts/install.sh | bash -s -- {id} {viewConnectToken} --url {apiUrl} --scripts-url {baseUrl}{targetSuffix}{mcpSuffix}";
        viewGitBashCommand = $"curl -fsSL {baseUrl}/scripts/install-gitbash.sh | bash -s -- {id} {viewConnectToken} --url {apiUrl} --scripts-url {baseUrl}{targetSuffix}{mcpSuffix}";
        viewPsCommand = $"iwr {baseUrl}/scripts/install.ps1 -OutFile $env:TEMP\\cyber-install.ps1; & $env:TEMP\\cyber-install.ps1 -NotebookId '{id}' -Token '{viewConnectToken}' -Url '{apiUrl}' -ScriptsUrl '{baseUrl}'{psTargetSuffix}{psMcpSuffix}";
    }

    private void CloseConnect()
    {
        viewConnectNotebookId = null;
        viewConnectToken = null;
        viewConnectTarget = "claude";
        viewBashCommand = null;
        viewGitBashCommand = null;
        viewPsCommand = null;
    }

    // ===== Token =====

    private void ShowToken()
    {
        if (authorIdHex == null) return;

        CloseConnect();
        viewTokenValue = TokenService.GenerateToken(authorIdHex);
    }

    private void CloseToken()
    {
        viewTokenValue = null;
    }

    // ===== Retry Failed Jobs =====

    private async Task RetryFailedJobs()
    {
        if (authorIdHex == null) return;
        isRetryingJobs = true;
        retryMessage = null;
        try
        {
            var count = await ApiClient.RetryFailedJobsAsync(authorIdHex, NotebookId);
            retryMessage = count > 0 ? $"{count} job(s) retried" : "No failed jobs";
        }
        catch (Exception ex)
        {
            retryMessage = $"Failed to retry jobs: {ex.Message}";
        }
        finally
        {
            isRetryingJobs = false;
        }
    }

    // ===== Delete =====

    private void ConfirmDelete() => showDeleteConfirm = true;

    private async Task DeleteNotebook()
    {
        if (authorIdHex == null) return;
        try
        {
            await ApiClient.DeleteNotebookAsync(authorIdHex, NotebookId);
            Navigation.NavigateTo("/notebooks");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to delete notebook: {ex.Message}";
            showDeleteConfirm = false;
        }
    }

    private async Task ShareNotebook()
    {
        if (authorIdHex == null) return;
        shareError = null;
        try
        {
            var request = new ShareRequest
            {
                AuthorId = shareAuthorId,
                Permissions = new SharePermissions { Read = true, Write = bool.Parse(shareWrite) },
            };
            await ApiClient.ShareNotebookAsync(authorIdHex, NotebookId, request);
            shareAuthorId = string.Empty;
            var participantsResp = await ApiClient.ListParticipantsAsync(authorIdHex, NotebookId);
            participants = participantsResp?.Participants ?? [];
        }
        catch (Exception ex)
        {
            shareError = $"Failed to share: {ex.Message}";
        }
    }

    private async Task RevokeAccess(string targetAuthorId)
    {
        if (authorIdHex == null) return;
        try
        {
            await ApiClient.RevokeShareAsync(authorIdHex, NotebookId, targetAuthorId);
            var participantsResp = await ApiClient.ListParticipantsAsync(authorIdHex, NotebookId);
            participants = participantsResp?.Participants ?? [];
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to revoke access: {ex.Message}";
        }
    }
