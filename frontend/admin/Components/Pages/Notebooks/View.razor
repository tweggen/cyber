@page "/notebooks/{NotebookId:guid}"
@using Microsoft.AspNetCore.Components.Authorization
@attribute [Authorize]
@using NotebookAdmin.Models
@using NotebookAdmin.Services
@inject NotebookApiClient ApiClient
@inject CurrentUserService CurrentUser
@inject NavigationManager Navigation
@inject TokenService TokenService
@inject IConfiguration Configuration
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@rendermode InteractiveServer

<PageTitle>@(notebookName ?? "Notebook")</PageTitle>

<h3>@(notebookName ?? "Notebook Details")</h3>

@if (errorMessage != null)
{
    <div class="alert alert-warning">@errorMessage</div>
}

@if (browseResult == null && errorMessage == null)
{
    <p>Loading...</p>
}
else if (browseResult != null)
{
    <div class="row mb-3">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Total Entries</h6>
                    <p class="card-text display-6">@browseResult.TotalEntries</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Notebook Entropy</h6>
                    <p class="card-text display-6">@browseResult.NotebookEntropy.ToString("F2")</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Clusters</h6>
                    <p class="card-text display-6">@browseResult.Catalog.Count</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-3 d-flex flex-wrap gap-2 align-items-center">
        <a href="/notebooks/@NotebookId/entries/new" class="btn btn-primary">New Entry</a>

        @if (isOwner)
        {
            <button class="btn btn-outline-secondary"
                    @onclick="StartRename"
                    disabled="@(isRenamingInline)">Rename</button>
            <button class="btn btn-outline-info"
                    @onclick="ShowConnect">Connect</button>
            <button class="btn btn-outline-warning"
                    @onclick="ShowToken">Token</button>

            <button class="btn btn-outline-secondary"
                    @onclick="RetryFailedJobs"
                    disabled="@isRetryingJobs">@(isRetryingJobs ? "Retrying..." : "Retry Failed Jobs")</button>

            @if (showDeleteConfirm)
            {
                <button class="btn btn-danger" @onclick="DeleteNotebook">Yes, Delete</button>
                <button class="btn btn-outline-secondary" @onclick="() => showDeleteConfirm = false">Cancel</button>
            }
            else
            {
                <button class="btn btn-outline-danger" @onclick="ConfirmDelete">Delete</button>
            }
        }
    </div>

    @if (retryMessage != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @retryMessage
            <button type="button" class="btn-close" @onclick="() => retryMessage = null"></button>
        </div>
    }

    @if (isRenamingInline)
    {
        <div class="card mb-3">
            <div class="card-body">
                <div class="d-flex gap-2">
                    <input type="text" class="form-control" placeholder="New name"
                           @bind="renameValue" @bind:event="oninput" @onkeydown="HandleRenameKeyDown" />
                    <button class="btn btn-primary" @onclick="ConfirmRename"
                            disabled="@(isRenaming || string.IsNullOrWhiteSpace(renameValue))">Save</button>
                    <button class="btn btn-outline-secondary" @onclick="CancelRename"
                            disabled="@isRenaming">Cancel</button>
                </div>
                @if (renameError != null)
                {
                    <div class="text-danger mt-2">@renameError</div>
                }
            </div>
        </div>
    }

    @if (viewConnectNotebookId != null)
    {
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center gap-2">
                    <span>Connect <strong>@notebookName</strong> to</span>
                    <select class="form-select form-select-sm" style="width: auto;"
                            @onchange="OnTargetChanged" value="@viewConnectTarget">
                        @foreach (var kv in TargetLabels)
                        {
                            <option value="@kv.Key">@kv.Value</option>
                        }
                    </select>
                </div>
                <button class="btn btn-sm btn-outline-secondary" @onclick="CloseConnect">Close</button>
            </div>
            <div class="card-body">
                <p class="text-muted small">Run one of these commands to register the notebook MCP server:</p>

                <div class="mb-3">
                    <label class="form-label small fw-bold mb-1">Bash (Mac / Linux / WSL)</label>
                    <div class="input-group input-group-sm">
                        <input type="text" class="form-control font-monospace" value="@viewBashCommand" readonly />
                        <button class="btn btn-outline-secondary"
                                onclick="clipboardCopyFromSibling(this)"
                                title="Copy to clipboard">Copy</button>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label small fw-bold mb-1">Git Bash (Windows)</label>
                    <div class="input-group input-group-sm">
                        <input type="text" class="form-control font-monospace" value="@viewGitBashCommand" readonly />
                        <button class="btn btn-outline-secondary"
                                onclick="clipboardCopyFromSibling(this)"
                                title="Copy to clipboard">Copy</button>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label small fw-bold mb-1">PowerShell (Windows)</label>
                    <div class="input-group input-group-sm">
                        <input type="text" class="form-control font-monospace" value="@viewPsCommand" readonly />
                        <button class="btn btn-outline-secondary"
                                onclick="clipboardCopyFromSibling(this)"
                                title="Copy to clipboard">Copy</button>
                    </div>
                </div>

                <p class="text-muted small mb-0">
                    Token is short-lived. Click <strong>Connect</strong> again to generate a fresh command.
                </p>
            </div>
        </div>
    }

    @if (viewTokenValue != null)
    {
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Token for <strong>@notebookName</strong></span>
                <button class="btn btn-sm btn-outline-secondary" @onclick="CloseToken">Close</button>
            </div>
            <div class="card-body">
                <label class="text-muted small mb-1">Notebook ID</label>
                <div class="input-group input-group-sm mb-3">
                    <input type="text" class="form-control font-monospace" value="@NotebookId" readonly />
                    <button class="btn btn-outline-secondary"
                            onclick="clipboardCopyFromSibling(this)"
                            title="Copy to clipboard">Copy</button>
                </div>

                <label class="text-muted small mb-1">JWT Token</label>
                <div class="input-group input-group-sm">
                    <input type="text" class="form-control font-monospace" value="@viewTokenValue" readonly />
                    <button class="btn btn-outline-secondary"
                            onclick="clipboardCopyFromSibling(this)"
                            title="Copy to clipboard">Copy</button>
                </div>
                <p class="text-muted small mt-2 mb-0">
                    Token is short-lived. Click <strong>Token</strong> again to generate a fresh one.
                </p>
            </div>
        </div>
    }

    @* ================================================================== *@
    @* Entries: path browser + search + paginated table                    *@
    @* ================================================================== *@

    <h4>Entries</h4>

    @* Path breadcrumb *@
    <nav aria-label="Topic path" class="mb-2">
        <ol class="breadcrumb mb-0" style="font-size: 0.9rem;">
            <li class="breadcrumb-item @(pathFilter == "" ? "active" : "")">
                @if (pathFilter == "")
                {
                    <span>/</span>
                }
                else
                {
                    <a href="#" @onclick="() => NavigatePath(string.Empty)" @onclick:preventDefault>/</a>
                }
            </li>
            @{ var segments = PathSegments; }
            @for (int i = 0; i < segments.Count; i++)
            {
                var segPath = string.Join("/", segments.Take(i + 1)) + "/";
                var isLast = i == segments.Count - 1;
                <li class="breadcrumb-item @(isLast ? "active" : "")">
                    @if (isLast)
                    {
                        <span>@segments[i]</span>
                    }
                    else
                    {
                        var p = segPath;
                        <a href="#" @onclick="() => NavigatePath(p)" @onclick:preventDefault>@segments[i]</a>
                    }
                </li>
            }
        </ol>
    </nav>

    @* Virtual directories at current path *@
    @if (virtualDirectories.Count > 0)
    {
        <div class="mb-2 d-flex flex-wrap gap-1">
            @foreach (var dir in virtualDirectories)
            {
                var target = pathFilter + dir + "/";
                <button class="btn btn-sm btn-outline-primary" @onclick="() => NavigatePath(target)">
                    @dir/ <span class="badge bg-secondary ms-1">@DirectoryEntryCount(target)</span>
                </button>
            }
        </div>
    }

    <div class="row g-2 mb-3 align-items-end">
        <div class="col-auto" style="min-width: 280px;">
            <input type="text" class="form-control form-control-sm" placeholder="Search topic or content..."
                @bind="searchQuery" @bind:event="oninput" @onkeyup="OnSearchChanged" />
        </div>
        <div class="col-auto">
            <select class="form-select form-select-sm" @bind="sortField" @bind:after="OnSortChanged">
                <option value="sequence">Newest first</option>
                <option value="sequence_asc">Oldest first</option>
                <option value="topic">Topic A-Z</option>
                <option value="cost">Cost (high to low)</option>
            </select>
        </div>
        <div class="col-auto">
            <button class="btn btn-sm btn-outline-info"
                    @onclick="RunServerSearch"
                    disabled="@(string.IsNullOrWhiteSpace(searchQuery) || isServerSearching)"
                    title="Full-text search via API">
                @(isServerSearching ? "Searching..." : "Server Search")
            </button>
            @if (serverSearchResults != null)
            {
                <button class="btn btn-sm btn-outline-secondary ms-1" @onclick="ClearServerSearch">Clear</button>
            }
        </div>
        @if (!string.IsNullOrWhiteSpace(searchQuery) || pathFilter != "")
        {
            <div class="col-auto">
                <span class="text-muted small">
                    @if (serverSearchResults != null)
                    { <text>@serverSearchResults.Count server result(s)</text> }
                    else
                    { <text>@filteredEntries.Count local result(s)</text> }
                </span>
            </div>
        }
    </div>

    @if (serverSearchResults != null)
    {
        <div class="card mb-3 border-info">
            <div class="card-header bg-info bg-opacity-10 small py-1">Server search results for "<em>@searchQuery</em>"</div>
            @if (serverSearchResults.Count == 0)
            {
                <div class="card-body py-2"><p class="text-muted mb-0">No results found.</p></div>
            }
            else
            {
                <table class="table table-sm mb-0">
                    <thead>
                        <tr>
                            <th>Topic</th>
                            <th>Snippet</th>
                            <th>Score</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in serverSearchResults)
                        {
                            <tr>
                                <td><a href="/notebooks/@NotebookId/entries/@r.EntryId">@(r.Topic ?? r.EntryId.ToString()[..8] + "…")</a></td>
                                <td class="small text-muted">@r.Snippet</td>
                                <td class="small">@r.RelevanceScore.ToString("F2")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    }

    @if (allEntries == null || allEntries.Count == 0)
    {
        <p class="text-muted">No entries in this notebook yet.</p>
    }
    else
    {
        <table class="table table-sm table-striped">
            <thead>
                <tr>
                    <th style="width: 60px;">Seq</th>
                    <th style="width: 80px;">Op</th>
                    <th>Topic</th>
                    <th style="width: 90px;">Cost</th>
                    <th style="width: 160px;">Created</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entry in PagedEntries)
                {
                    <tr>
                        <td class="text-muted">@entry.CausalPosition.Sequence</td>
                        <td>
                            <span class="badge @(entry.Operation == "write" ? "bg-success" : "bg-info")">@entry.Operation</span>
                        </td>
                        <td>
                            <a href="/notebooks/@NotebookId/entries/@entry.EntryId">@(entry.Topic ?? "-")</a>
                        </td>
                        <td>@entry.IntegrationCost.CatalogShift.ToString("F3")</td>
                        <td class="text-muted small">@entry.Created.ToString("yyyy-MM-dd HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>

        @* Pagination controls *@
        @if (TotalPages > 1)
        {
            <nav>
                <ul class="pagination pagination-sm justify-content-center">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <button class="page-link" @onclick="() => GoToPage(currentPage - 1)">&laquo;</button>
                    </li>
                    @foreach (var p in VisiblePageNumbers)
                    {
                        <li class="page-item @(p == currentPage ? "active" : "")">
                            <button class="page-link" @onclick="() => GoToPage(p)">@p</button>
                        </li>
                    }
                    <li class="page-item @(currentPage == TotalPages ? "disabled" : "")">
                        <button class="page-link" @onclick="() => GoToPage(currentPage + 1)">&raquo;</button>
                    </li>
                </ul>
            </nav>
        }
    }

    @* ================================================================== *@
    @* Catalog                                                             *@
    @* ================================================================== *@

    <h4 class="mt-4">Catalog</h4>

    @if (browseResult.Catalog.Count == 0)
    {
        <p class="text-muted">No clusters yet.</p>
    }

    @foreach (var cluster in browseResult.Catalog)
    {
        <div class="card mb-2">
            <div class="card-body">
                <h6 class="card-title">@cluster.Topic</h6>
                <p class="card-text">@cluster.Summary</p>
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                        @cluster.EntryCount entries | Cost: @cluster.CumulativeCost.ToString("F2") | Stability: @cluster.Stability
                    </small>
                    @if (cluster.RepresentativeEntryIds.Count > 0)
                    {
                        <div>
                            @foreach (var eid in cluster.RepresentativeEntryIds.Take(3))
                            {
                                <a href="/notebooks/@NotebookId/entries/@eid"
                                   class="btn btn-sm btn-outline-secondary me-1"
                                   title="@eid">@eid.ToString()[..8]</a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    @* ================================================================== *@
    @* Sharing (owner only)                                                *@
    @* ================================================================== *@

    @if (isOwner)
    {
        <hr />
        <h4>Sharing</h4>

        @if (participants != null)
        {
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Author ID</th>
                        <th>Tier</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in participants)
                    {
                        <tr>
                            <td><code>@(p.AuthorId[..16])...</code></td>
                            <td><span class="badge @TierBadgeClass(p.Permissions.Tier ?? "read")">@(p.Permissions.Tier ?? "read")</span></td>
                            <td>
                                @if (p.AuthorId != authorIdHex)
                                {
                                    <button class="btn btn-sm btn-outline-danger"
                                        @onclick="() => RevokeAccess(p.AuthorId)">Revoke</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        <div class="row g-2 mt-2">
            <div class="col-auto">
                <input type="text" class="form-control form-control-sm" placeholder="Author ID (64 hex chars)"
                    @bind="shareAuthorId" />
            </div>
            <div class="col-auto">
                <select class="form-select form-select-sm" @bind="shareTier">
                    <option value="existence">existence (can see notebook exists)</option>
                    <option value="read">read (can read entries)</option>
                    <option value="read_write">read_write (can write entries)</option>
                    <option value="admin">admin (can share + manage)</option>
                </select>
            </div>
            <div class="col-auto">
                <button class="btn btn-sm btn-primary" @onclick="ShareNotebook">Share</button>
            </div>
        </div>
        @if (shareError != null)
        {
            <div class="alert alert-danger mt-2">@shareError</div>
        }

        <hr />
        <h4>
            Content Reviews
            @if (pendingReviewCount > 0)
            {
                <span class="badge bg-warning text-dark ms-2">@pendingReviewCount pending</span>
            }
        </h4>

        @if (reviewsError != null)
        {
            <div class="alert alert-warning mt-2">@reviewsError</div>
        }

        @if (reviews == null)
        {
            <p>Loading reviews...</p>
        }
        else if (reviews.Count == 0)
        {
            <p class="text-muted">No reviews for this notebook.</p>
        }
        else
        {
            <table class="table table-sm table-striped">
                <thead>
                    <tr>
                        <th>Entry</th>
                        <th>Submitter</th>
                        <th>Status</th>
                        <th>Submitted</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in reviews.OrderBy(r => r.Status != "pending").ThenBy(r => r.Created))
                    {
                        <tr>
                            <td><a href="/notebooks/@NotebookId/entries/@r.EntryId"><code>@r.EntryId.ToString()[..8]…</code></a></td>
                            <td><NotebookAdmin.Components.Shared.AuthorDisplay AuthorIdHex="@r.Submitter" /></td>
                            <td>
                                <span class="badge @(r.Status == "pending" ? "bg-warning text-dark" : r.Status == "approved" ? "bg-success" : "bg-danger")">
                                    @r.Status
                                </span>
                            </td>
                            <td>@r.Created.ToString("yyyy-MM-dd")</td>
                            <td>
                                @if (r.Status == "pending")
                                {
                                    <button class="btn btn-sm btn-outline-success"
                                            @onclick="() => ApproveReview(r.Id)"
                                            disabled="@isActingOnReview">Approve</button>
                                    <button class="btn btn-sm btn-outline-danger ms-1"
                                            @onclick="() => RejectReview(r.Id)"
                                            disabled="@isActingOnReview">Reject</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        <hr />
        <h4>Subscriptions</h4>
        @if (subsError != null)
        {
            <div class="alert alert-warning mt-2">@subsError</div>
        }
        @if (subscriptions == null)
        {
            <p>Loading subscriptions...</p>
        }
        else
        {
            @if (subscriptions.Count > 0)
            {
                <table class="table table-sm table-striped">
                    <thead>
                        <tr>
                            <th>Source Notebook</th>
                            <th>Scope</th>
                            <th>Status</th>
                            <th>Watermark</th>
                            <th>Mirrored</th>
                            <th>Last Sync</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sub in subscriptions)
                        {
                            <tr>
                                <td><a href="/notebooks/@sub.SourceId"><code>@sub.SourceId.ToString()[..8]…</code></a></td>
                                <td><span class="badge bg-info text-dark">@sub.Scope</span></td>
                                <td>
                                    <span class="badge @SubStatusClass(sub.SyncStatus)">@sub.SyncStatus</span>
                                    @if (sub.SyncError != null)
                                    {
                                        <span class="ms-1 text-danger small" title="@sub.SyncError">⚠</span>
                                    }
                                </td>
                                <td>@sub.SyncWatermark</td>
                                <td>@sub.MirroredCount</td>
                                <td>@(sub.LastSyncAt?.ToString("yyyy-MM-dd HH:mm") ?? "never")</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-info"
                                            @onclick="() => TriggerSync(sub.Id)"
                                            disabled="@isActingOnSub" title="Trigger immediate sync">Sync</button>
                                    @if (deletingSubId == sub.Id)
                                    {
                                        <button class="btn btn-sm btn-danger ms-1"
                                                @onclick="() => ConfirmDeleteSub(sub.Id)"
                                                disabled="@isActingOnSub">Yes, Delete</button>
                                        <button class="btn btn-sm btn-outline-secondary ms-1"
                                                @onclick="() => deletingSubId = null">Cancel</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-outline-danger ms-1"
                                                @onclick="() => deletingSubId = sub.Id"
                                                disabled="@isActingOnSub">Delete</button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">No subscriptions for this notebook.</p>
            }

            <div class="card mt-2">
                <div class="card-body">
                    <h6>Add Subscription</h6>
                    <div class="row g-2">
                        <div class="col-md-4">
                            <label class="form-label small">Source Notebook ID</label>
                            <input class="form-control form-control-sm font-monospace"
                                   placeholder="UUID of source notebook"
                                   @bind="newSubSourceId" disabled="@isActingOnSub" />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label small">Scope</label>
                            <select class="form-select form-select-sm" @bind="newSubScope" disabled="@isActingOnSub">
                                <option value="catalog">catalog</option>
                                <option value="claims">claims</option>
                                <option value="entries">entries</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label small">Discount Factor</label>
                            <input type="number" step="0.1" min="0.1" max="1.0"
                                   class="form-control form-control-sm"
                                   @bind="newSubDiscount" disabled="@isActingOnSub" />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label small">Poll Interval (s)</label>
                            <input type="number" min="10" class="form-control form-control-sm"
                                   @bind="newSubPollInterval" disabled="@isActingOnSub" />
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button class="btn btn-outline-primary btn-sm w-100"
                                    @onclick="CreateSubscription"
                                    disabled="@(isActingOnSub || !Guid.TryParse(newSubSourceId, out _))">
                                Subscribe
                            </button>
                        </div>
                    </div>
                    @if (newSubSourceId.Length > 0 && !Guid.TryParse(newSubSourceId, out _))
                    {
                        <div class="text-danger small mt-1">Source ID must be a valid UUID.</div>
                    }
                </div>
            </div>
        }

        <hr />
        <h4>Job Pipeline</h4>
        @if (jobStatsError != null)
        {
            <div class="alert alert-warning mt-2">@jobStatsError</div>
        }
        @if (jobStats != null)
        {
            <table class="table table-sm table-bordered" style="font-size: 0.85rem; max-width: 700px;">
                <thead class="table-light">
                    <tr>
                        <th>Job Type</th>
                        <th class="text-center">Pending</th>
                        <th class="text-center">In Progress</th>
                        <th class="text-center">Completed</th>
                        <th class="text-center text-danger">Failed</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in new[] {
                        ("DISTILL_CLAIMS", jobStats.DistillClaims),
                        ("COMPARE_CLAIMS", jobStats.CompareClaims),
                        ("CLASSIFY_TOPIC", jobStats.ClassifyTopic),
                        ("EMBED_CLAIMS", jobStats.EmbedClaims)
                    })
                    {
                        <tr>
                            <td class="font-monospace small">@row.Item1</td>
                            <td class="text-center">@(row.Item2.Pending > 0 ? row.Item2.Pending.ToString() : "—")</td>
                            <td class="text-center">@(row.Item2.InProgress > 0 ? row.Item2.InProgress.ToString() : "—")</td>
                            <td class="text-center text-muted">@row.Item2.Completed</td>
