    private void ApplyFilterAndSort()
    {
        if (allEntries == null)
        {
            filteredEntries = [];
            virtualDirectories = [];
            return;
        }

        // Compute virtual directories from all entries (ignoring search query)
        ComputeVirtualDirectories();

        IEnumerable<ChangeEntry> result = allEntries;

        // Apply path filter: show only direct children of the current path
        if (pathFilter == "")
        {
            // Root: entries whose topic has no '/' (direct children)
            result = result.Where(e => e.Topic != null && !e.Topic.Contains('/'));
        }
        else
        {
            // Show entries whose topic starts with pathFilter and has no further '/' after it
            result = result.Where(e =>
            {
                if (e.Topic == null || !e.Topic.StartsWith(pathFilter))
                    return false;
                var remainder = e.Topic[pathFilter.Length..];
                return !remainder.Contains('/');
            });
        }

        // Apply search filter (within path-filtered results)
        if (!string.IsNullOrWhiteSpace(searchQuery))
        {
            var q = searchQuery.Trim().ToLowerInvariant();
            result = result.Where(e =>
                (e.Topic != null && e.Topic.ToLowerInvariant().Contains(q)) ||
                e.EntryId.ToString().StartsWith(q, StringComparison.OrdinalIgnoreCase));
        }

        // Apply sort
        result = sortField switch
        {
            "sequence_asc" => result.OrderBy(e => e.CausalPosition.Sequence),
            "topic" => result.OrderBy(e => e.Topic ?? "").ThenByDescending(e => e.CausalPosition.Sequence),
            "cost" => result.OrderByDescending(e => e.IntegrationCost.CatalogShift),
            _ => result.OrderByDescending(e => e.CausalPosition.Sequence), // "sequence" = newest first
        };

        filteredEntries = result.ToList();

        // Reset to page 1 when filter/sort changes
        if (currentPage > TotalPages)
            currentPage = 1;
    }

    private void ComputeVirtualDirectories()
    {
        if (allEntries == null)
        {
            virtualDirectories = [];
            return;
        }

        var dirs = new HashSet<string>();
        foreach (var entry in allEntries)
        {
            if (entry.Topic == null) continue;

            // Only consider topics that start with the current path
            if (pathFilter != "" && !entry.Topic.StartsWith(pathFilter))
                continue;

            var remainder = pathFilter == "" ? entry.Topic : entry.Topic[pathFilter.Length..];

            // If remainder contains '/', the first segment is a virtual directory
            var slashIdx = remainder.IndexOf('/');
            if (slashIdx > 0)
            {
                dirs.Add(remainder[..slashIdx]);
            }
        }

        virtualDirectories = dirs.OrderBy(d => d).ToList();
    }

