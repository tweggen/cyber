@page "/admin/users/{UserId}/quotas"
@attribute [Authorize]
@using Microsoft.AspNetCore.Identity
@using NotebookAdmin.Models
@using NotebookAdmin.Services
@inject UserManager<ApplicationUser> UserManager
@inject QuotaService QuotaService
@rendermode InteractiveServer

<PageTitle>Quota Management</PageTitle>

<h3>Quota Management</h3>

<a href="/admin/users" class="btn btn-sm btn-outline-secondary mb-3">Back to Users</a>

@if (user != null)
{
    <p>User: <strong>@user.UserName</strong> (@(user.DisplayName ?? "No display name"))</p>
}

@if (errorMessage != null)
{
    <div class="alert alert-danger">@errorMessage</div>
}
@if (successMessage != null)
{
    <div class="alert alert-success">@successMessage</div>
}

@if (quota == null && errorMessage == null)
{
    <p>Loading...</p>
}
else if (quota != null)
{
    <EditForm Model="quota" OnValidSubmit="SaveQuota" FormName="quotaEdit">
        <div class="mb-3">
            <label class="form-label">Max Notebooks</label>
            <InputNumber class="form-control" @bind-Value="quota.MaxNotebooks" />
        </div>
        <div class="mb-3">
            <label class="form-label">Max Entries per Notebook</label>
            <InputNumber class="form-control" @bind-Value="quota.MaxEntriesPerNotebook" />
        </div>
        <div class="mb-3">
            <label class="form-label">Max Entry Size (bytes)</label>
            <InputNumber class="form-control" @bind-Value="quota.MaxEntrySizeBytes" />
            <small class="text-muted">Default: 1,048,576 (1 MB)</small>
        </div>
        <div class="mb-3">
            <label class="form-label">Max Total Storage (bytes)</label>
            <InputNumber class="form-control" @bind-Value="quota.MaxTotalStorageBytes" />
            <small class="text-muted">Default: 104,857,600 (100 MB)</small>
        </div>
        <button type="submit" class="btn btn-primary">Save Quotas</button>
    </EditForm>

    <div class="mt-3 text-muted">
        <small>Created: @quota.CreatedAt.ToString("u") | Updated: @quota.UpdatedAt.ToString("u")</small>
    </div>
}

@code {
    [Parameter]
    public string UserId { get; set; } = string.Empty;

    private ApplicationUser? user;
    private UserQuota? quota;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        user = await UserManager.FindByIdAsync(UserId);
        if (user == null)
        {
            errorMessage = "User not found.";
            return;
        }

        quota = await QuotaService.GetOrCreateDefaultAsync(UserId);
    }

    private async Task SaveQuota()
    {
        if (quota == null) return;
        successMessage = null;
        errorMessage = null;

        try
        {
            await QuotaService.UpdateQuotaAsync(UserId, quota);
            successMessage = "Quotas updated successfully.";
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to save quotas: {ex.Message}";
        }
    }
}
