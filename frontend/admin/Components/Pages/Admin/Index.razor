@page "/admin"
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Admin Panel</PageTitle>

<h1 class="mb-4">Admin Panel</h1>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <div class="col">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
                <div class="mb-3">
                    <span class="bi bi-speedometer2" style="font-size: 2rem; color: #0d6efd;"></span>
                </div>
                <h5 class="card-title">Dashboard</h5>
                <p class="card-text text-muted small flex-grow-1">System overview, statistics, and recommended actions</p>
                <a href="/admin/dashboard" class="btn btn-sm btn-primary mt-auto">Go to Dashboard</a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
                <div class="mb-3">
                    <span class="bi bi-people-fill" style="font-size: 2rem; color: #198754;"></span>
                </div>
                <h5 class="card-title">Users</h5>
                <p class="card-text text-muted small flex-grow-1">Manage user accounts, permissions, and quotas</p>
                <a href="/admin/users" class="btn btn-sm btn-success mt-auto">Manage Users</a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
                <div class="mb-3">
                    <span class="bi bi-diagram-3-fill" style="font-size: 2rem; color: #0dcaf0;"></span>
                </div>
                <h5 class="card-title">Organizations</h5>
                <p class="card-text text-muted small flex-grow-1">Configure organization structure and settings</p>
                <a href="/admin/organizations" class="btn btn-sm btn-info mt-auto">Manage Organizations</a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
                <div class="mb-3">
                    <span class="bi bi-robot" style="font-size: 2rem; color: #fd7e14;"></span>
                </div>
                <h5 class="card-title">Agents</h5>
                <p class="card-text text-muted small flex-grow-1">Monitor and manage agent deployments</p>
                <a href="/admin/agents" class="btn btn-sm btn-warning mt-auto">Manage Agents</a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
                <div class="mb-3">
                    <span class="bi bi-cloud-download" style="font-size: 2rem; color: #6f42c1;"></span>
                </div>
                <h5 class="card-title">Crawlers</h5>
                <p class="card-text text-muted small flex-grow-1">Configure and run data crawlers</p>
                <a href="/admin/crawlers" class="btn btn-sm btn-purple mt-auto">Configure Crawlers</a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
                <div class="mb-3">
                    <span class="bi bi-journal-text" style="font-size: 2rem; color: #dc3545;"></span>
                </div>
                <h5 class="card-title">Audit Trail</h5>
                <p class="card-text text-muted small flex-grow-1">Review system events and access logs</p>
                <a href="/admin/audit" class="btn btn-sm btn-danger mt-auto">View Audit Trail</a>
            </div>
        </div>
    </div>
</div>

<style>
    .bi {
        display: inline-block;
    }

    .btn-purple {
        color: #fff;
        background-color: #6f42c1;
        border-color: #6f42c1;
    }

    .btn-purple:hover {
        color: #fff;
        background-color: #5a32a3;
        border-color: #502895;
    }
</style>
