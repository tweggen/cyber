@page "/"

<PageTitle>Notebook Admin</PageTitle>

<h1>Notebook Admin Console</h1>

<p>Welcome to the Knowledge Exchange Platform administration console.</p>

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Notebooks</h5>
                <p class="card-text">Browse and manage notebooks in the knowledge exchange platform.</p>
                <a href="/notebooks" class="btn btn-primary">View Notebooks</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Users</h5>
                <p class="card-text">Manage user accounts and their associated author identities.</p>
                <a href="/admin/users" class="btn btn-primary">Manage Users</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Dashboard</h5>
                <p class="card-text">View system statistics and notebook activity overview.</p>
                <a href="/admin/dashboard" class="btn btn-primary">Dashboard</a>
            </div>
        </div>
    </div>
</div>
