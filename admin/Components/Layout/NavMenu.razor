@using Microsoft.AspNetCore.Components.Authorization
@inject IJSRuntime JS

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Notebook Admin</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="notebooks">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Notebooks
            </NavLink>
        </div>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="profile">
                        <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> Profile
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/dashboard">
                        <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Dashboard
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/users">
                        <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Users
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <form method="post" action="/auth/logout">
                        <button type="submit" class="nav-link btn btn-link">
                            Logout
                        </button>
                    </form>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="auth/login">
                        Login
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="auth/register">
                        Register
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>

    <div class="theme-switcher" @onclick:stopPropagation="true">
        <label for="theme-select">Theme</label>
        <select id="theme-select" @onchange="OnThemeChanged" value="@currentTheme">
            <option value="crt">Amber CRT</option>
            <option value="twm">X11 TWM</option>
        </select>
    </div>
</div>

@code {
    private string currentTheme = "crt";

    private async Task OnThemeChanged(ChangeEventArgs e)
    {
        currentTheme = e.Value?.ToString() ?? "crt";
        await JS.InvokeVoidAsync("setTheme", currentTheme);
    }
}
