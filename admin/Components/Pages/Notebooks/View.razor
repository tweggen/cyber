@page "/notebooks/{NotebookId:guid}"
@using Microsoft.AspNetCore.Components.Authorization
@attribute [Authorize]
@using NotebookAdmin.Models
@using NotebookAdmin.Services
@inject NotebookApiClient ApiClient
@inject CurrentUserService CurrentUser
@inject NavigationManager Navigation
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@rendermode InteractiveServer

<PageTitle>Notebook</PageTitle>

<h3>Notebook Details</h3>

@if (errorMessage != null)
{
    <div class="alert alert-warning">@errorMessage</div>
}

@if (browseResult == null && errorMessage == null)
{
    <p>Loading...</p>
}
else if (browseResult != null)
{
    <div class="row mb-3">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Total Entries</h6>
                    <p class="card-text display-6">@browseResult.TotalEntries</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Notebook Entropy</h6>
                    <p class="card-text display-6">@browseResult.NotebookEntropy.ToString("F2")</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Clusters</h6>
                    <p class="card-text display-6">@browseResult.Catalog.Count</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <a href="/notebooks/@NotebookId/entries/new" class="btn btn-primary">New Entry</a>

        @if (isOwner)
        {
            <button class="btn btn-danger ms-2" @onclick="ConfirmDelete">Delete Notebook</button>
        }
    </div>

    @if (showDeleteConfirm)
    {
        <div class="alert alert-danger">
            <p>Are you sure you want to delete this notebook and all its entries?</p>
            <button class="btn btn-danger btn-sm" @onclick="DeleteNotebook">Yes, Delete</button>
            <button class="btn btn-secondary btn-sm ms-2" @onclick="() => showDeleteConfirm = false">Cancel</button>
        </div>
    }

    @* ================================================================== *@
    @* Entries: search + paginated table                                   *@
    @* ================================================================== *@

    <h4>Entries</h4>

    <div class="row g-2 mb-3 align-items-end">
        <div class="col-auto" style="min-width: 280px;">
            <input type="text" class="form-control form-control-sm" placeholder="Search topic or content..."
                @bind="searchQuery" @bind:event="oninput" @onkeyup="OnSearchChanged" />
        </div>
        <div class="col-auto">
            <select class="form-select form-select-sm" @bind="sortField" @bind:after="OnSortChanged">
                <option value="sequence">Newest first</option>
                <option value="sequence_asc">Oldest first</option>
                <option value="topic">Topic A-Z</option>
                <option value="cost">Cost (high to low)</option>
            </select>
        </div>
        @if (!string.IsNullOrWhiteSpace(searchQuery))
        {
            <div class="col-auto">
                <span class="text-muted small">@filteredEntries.Count result(s)</span>
            </div>
        }
    </div>

    @if (allEntries == null || allEntries.Count == 0)
    {
        <p class="text-muted">No entries in this notebook yet.</p>
    }
    else
    {
        <table class="table table-sm table-striped">
            <thead>
                <tr>
                    <th style="width: 60px;">Seq</th>
                    <th style="width: 80px;">Op</th>
                    <th>Topic</th>
                    <th style="width: 90px;">Cost</th>
                    <th style="width: 160px;">Created</th>
                    <th style="width: 60px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entry in PagedEntries)
                {
                    <tr>
                        <td class="text-muted">@entry.CausalPosition.Sequence</td>
                        <td>
                            <span class="badge @(entry.Operation == "write" ? "bg-success" : "bg-info")">@entry.Operation</span>
                        </td>
                        <td>@(entry.Topic ?? "-")</td>
                        <td>@entry.IntegrationCost.CatalogShift.ToString("F3")</td>
                        <td class="text-muted small">@entry.Created.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <a href="/notebooks/@NotebookId/entries/@entry.EntryId"
                               class="btn btn-sm btn-outline-secondary">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @* Pagination controls *@
        @if (TotalPages > 1)
        {
            <nav>
                <ul class="pagination pagination-sm justify-content-center">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <button class="page-link" @onclick="() => GoToPage(currentPage - 1)">&laquo;</button>
                    </li>
                    @foreach (var p in VisiblePageNumbers)
                    {
                        <li class="page-item @(p == currentPage ? "active" : "")">
                            <button class="page-link" @onclick="() => GoToPage(p)">@p</button>
                        </li>
                    }
                    <li class="page-item @(currentPage == TotalPages ? "disabled" : "")">
                        <button class="page-link" @onclick="() => GoToPage(currentPage + 1)">&raquo;</button>
                    </li>
                </ul>
            </nav>
        }
    }

    @* ================================================================== *@
    @* Catalog                                                             *@
    @* ================================================================== *@

    <h4 class="mt-4">Catalog</h4>

    @if (browseResult.Catalog.Count == 0)
    {
        <p class="text-muted">No clusters yet.</p>
    }

    @foreach (var cluster in browseResult.Catalog)
    {
        <div class="card mb-2">
            <div class="card-body">
                <h6 class="card-title">@cluster.Topic</h6>
                <p class="card-text">@cluster.Summary</p>
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                        @cluster.EntryCount entries | Cost: @cluster.CumulativeCost.ToString("F2") | Stability: @cluster.Stability
                    </small>
                    @if (cluster.RepresentativeEntryIds.Count > 0)
                    {
                        <div>
                            @foreach (var eid in cluster.RepresentativeEntryIds.Take(3))
                            {
                                <a href="/notebooks/@NotebookId/entries/@eid"
                                   class="btn btn-sm btn-outline-secondary me-1"
                                   title="@eid">@eid.ToString()[..8]</a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    @* ================================================================== *@
    @* Sharing (owner only)                                                *@
    @* ================================================================== *@

    @if (isOwner)
    {
        <hr />
        <h4>Sharing</h4>

        @if (participants != null)
        {
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Author ID</th>
                        <th>Read</th>
                        <th>Write</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in participants)
                    {
                        <tr>
                            <td><code>@(p.AuthorId[..16])...</code></td>
                            <td>@(p.Permissions.Read ? "Yes" : "No")</td>
                            <td>@(p.Permissions.Write ? "Yes" : "No")</td>
                            <td>
                                @if (p.AuthorId != authorIdHex)
                                {
                                    <button class="btn btn-sm btn-outline-danger"
                                        @onclick="() => RevokeAccess(p.AuthorId)">Revoke</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        <div class="row g-2 mt-2">
            <div class="col-auto">
                <input type="text" class="form-control form-control-sm" placeholder="Author ID (64 hex chars)"
                    @bind="shareAuthorId" />
            </div>
            <div class="col-auto">
                <select class="form-select form-select-sm" @bind="shareWrite">
                    <option value="false">Read only</option>
                    <option value="true">Read + Write</option>
                </select>
            </div>
            <div class="col-auto">
                <button class="btn btn-sm btn-primary" @onclick="ShareNotebook">Share</button>
            </div>
        </div>
        @if (shareError != null)
        {
            <div class="alert alert-danger mt-2">@shareError</div>
        }
    }
}

@code {
    [Parameter]
    public Guid NotebookId { get; set; }

    [CascadingParameter]
    private Task<AuthenticationState>? AuthState { get; set; }

    private BrowseResponse? browseResult;
    private List<ChangeEntry>? allEntries;
    private List<ChangeEntry> filteredEntries = [];
    private List<ParticipantDto>? participants;
    private string? errorMessage;
    private string? authorIdHex;
    private bool isOwner;
    private bool showDeleteConfirm;
    private string shareAuthorId = string.Empty;
    private string shareWrite = "false";
    private string? shareError;

    // Search & pagination state
    private string searchQuery = string.Empty;
    private string sortField = "sequence";
    private int currentPage = 1;
    private const int PageSize = 25;

    private int TotalPages => filteredEntries.Count == 0 ? 1 : (int)Math.Ceiling((double)filteredEntries.Count / PageSize);

    private IEnumerable<ChangeEntry> PagedEntries =>
        filteredEntries
            .Skip((currentPage - 1) * PageSize)
            .Take(PageSize);

    private IEnumerable<int> VisiblePageNumbers
    {
        get
        {
            // Show at most 7 page numbers centered around current page
            int total = TotalPages;
            int start = Math.Max(1, currentPage - 3);
            int end = Math.Min(total, start + 6);
            start = Math.Max(1, end - 6);
            return Enumerable.Range(start, end - start + 1);
        }
    }

    protected override async Task OnInitializedAsync()
    {
        var state = AuthState != null ? await AuthState : null;
        authorIdHex = await CurrentUser.GetAuthorIdHexAsync(state?.User);
        if (authorIdHex == null)
        {
            Navigation.NavigateTo("/auth/login");
            return;
        }

        try
        {
            browseResult = await ApiClient.BrowseAsync(authorIdHex, NotebookId);

            var observeResult = await ApiClient.ObserveAsync(authorIdHex, NotebookId);
            allEntries = observeResult?.Changes ?? [];

            ApplyFilterAndSort();

            var notebooksResp = await ApiClient.ListNotebooksAsync(authorIdHex);
            isOwner = notebooksResp?.Notebooks.Any(n => n.Id == NotebookId && n.IsOwner) ?? false;

            if (isOwner)
            {
                var participantsResp = await ApiClient.ListParticipantsAsync(authorIdHex, NotebookId);
                participants = participantsResp?.Participants ?? [];
            }
        }
        catch (HttpRequestException ex)
        {
            errorMessage = $"Could not connect to notebook API: {ex.Message}";
        }
    }

    private void ApplyFilterAndSort()
    {
        if (allEntries == null)
        {
            filteredEntries = [];
            return;
        }

        IEnumerable<ChangeEntry> result = allEntries;

        // Apply search filter
        if (!string.IsNullOrWhiteSpace(searchQuery))
        {
            var q = searchQuery.Trim().ToLowerInvariant();
            result = result.Where(e =>
                (e.Topic != null && e.Topic.ToLowerInvariant().Contains(q)) ||
                e.EntryId.ToString().StartsWith(q, StringComparison.OrdinalIgnoreCase));
        }

        // Apply sort
        result = sortField switch
        {
            "sequence_asc" => result.OrderBy(e => e.CausalPosition.Sequence),
            "topic" => result.OrderBy(e => e.Topic ?? "").ThenByDescending(e => e.CausalPosition.Sequence),
            "cost" => result.OrderByDescending(e => e.IntegrationCost.CatalogShift),
            _ => result.OrderByDescending(e => e.CausalPosition.Sequence), // "sequence" = newest first
        };

        filteredEntries = result.ToList();

        // Reset to page 1 when filter/sort changes
        if (currentPage > TotalPages)
            currentPage = 1;
    }

    private void OnSearchChanged()
    {
        currentPage = 1;
        ApplyFilterAndSort();
    }

    private void OnSortChanged()
    {
        currentPage = 1;
        ApplyFilterAndSort();
    }

    private void GoToPage(int page)
    {
        if (page >= 1 && page <= TotalPages)
            currentPage = page;
    }

    private void ConfirmDelete() => showDeleteConfirm = true;

    private async Task DeleteNotebook()
    {
        if (authorIdHex == null) return;
        try
        {
            await ApiClient.DeleteNotebookAsync(authorIdHex, NotebookId);
            Navigation.NavigateTo("/notebooks");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to delete notebook: {ex.Message}";
            showDeleteConfirm = false;
        }
    }

    private async Task ShareNotebook()
    {
        if (authorIdHex == null) return;
        shareError = null;
        try
        {
            var request = new ShareRequest
            {
                AuthorId = shareAuthorId,
                Permissions = new SharePermissions { Read = true, Write = bool.Parse(shareWrite) },
            };
            await ApiClient.ShareNotebookAsync(authorIdHex, NotebookId, request);
            shareAuthorId = string.Empty;
            var participantsResp = await ApiClient.ListParticipantsAsync(authorIdHex, NotebookId);
            participants = participantsResp?.Participants ?? [];
        }
        catch (Exception ex)
        {
            shareError = $"Failed to share: {ex.Message}";
        }
    }

    private async Task RevokeAccess(string targetAuthorId)
    {
        if (authorIdHex == null) return;
        try
        {
            await ApiClient.RevokeShareAsync(authorIdHex, NotebookId, targetAuthorId);
            var participantsResp = await ApiClient.ListParticipantsAsync(authorIdHex, NotebookId);
            participants = participantsResp?.Participants ?? [];
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to revoke access: {ex.Message}";
        }
    }
}
